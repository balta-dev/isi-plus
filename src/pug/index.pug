    #app
      section.ano.primer-ano(:class="{aprobado: primerAnoAprobado}")
        h2(@click="aprobarAno('1')") Primer año
        h3 Anual
        .anual
          materia(v-for="m in this.$store.getters.getMateriasAnoAnuales('1')"
                  :key="m.id"
                  :id="m.id"
                  :nombre="m.nombre"
                  :integradora="m.integradora"
                  :electiva="m.electiva"
                  :analista="m.analista")

        h3 Primer cuatrimestre
