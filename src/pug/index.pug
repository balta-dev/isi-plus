        materia(
          v-for="m in this.$store.getters.getMateriasAnoAnuales('1')"
          :key="m.id"
          :id="m.id"
          :nombre="m.nombre"
          :integradora="m.integradora"
          :electiva="m.electiva"
          :analista="m.analista")

        h3.ano__subtitulo Primer cuatrimestre
